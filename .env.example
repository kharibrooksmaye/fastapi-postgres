# Application Configuration
ENVIRONMENT=development  # development, staging, or production (affects cookie security)

# Database Configuration
DB_ENDPOINT=your-database-host
DB_USER=your-database-user
DB_PW=your-database-password
DB_PORT=5432
DB_NAME=your-database-name
DB_URL=postgresql://your-database-user:your-database-password@your-database-host:5432/your-database-name
TEST_DB_URL=postgresql://your-database-user:your-database-password@your-database-host:5432/your-test-database-name

# JWT Configuration
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh Token Configuration
REFRESH_TOKEN_EXPIRE_DAYS=30
REFRESH_TOKEN_REMEMBER_ME_DAYS=90

# External API Keys
IMAGE_API_KEY=your-image-api-key
GOOGLE_CXE=your-google-custom-search-engine-id

# AWS S3 Configuration
S3_KEYID=your-s3-access-key-id
S3_SECRET=your-s3-secret-access-key

# Supabase Configuration
SUPABASE_URL=your-supabase-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# Stripe Configuration
STRIPE_API_KEY=your-stripe-test-key
STRIPE_API_LIVE_KEY=your-stripe-live-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# SMTP Email Configuration
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@yourdomain.com

# Frontend URL (for email activation links)
FRONTEND_URL=http://localhost:5173
